<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.paul.mymechanic.Questionnaire">


    <FrameLayout
        android:layout_width="395dp"
        android:layout_height="643dp"
        tools:layout_editor_absoluteX="27dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/textViewMarqueVehicule"
            android:layout_width="300dp"
            android:layout_height="41dp"
            android:layout_marginLeft="20dp"
            android:text="Marque de votre véhicule :"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerMarque"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="50dp"
            android:entries="@array/car_array" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="200dp"
            android:text="Année du véhicule :"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="400dp"
            android:text="Type de moteur"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerMoteur"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="450dp"
            android:entries="@array/Moteur" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="300dp"
            android:text="Carburant :"
            android:textSize="18sp" />

        <Spinner
            android:id="@+id/spinnerCarburant"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="350dp"
            android:entries="@array/Carburant" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="300dp"
            android:layout_height="38dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="100dp"
            android:text="Type commercial :"
            android:textSize="18sp" />

        <Button
            android:id="@+id/button2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="500dp"
            android:text="Ensuite" />

        <Spinner
            android:id="@+id/spinnerTypeCommercial"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="150dp"
            android:background="?android:attr/colorForeground"
            android:visibility="visible" />

        <Spinner
            android:id="@+id/spinnerAnnee"
            android:layout_width="300dp"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="250dp"
            android:background="@color/cast_expanded_controller_background_color"
            android:visibility="visible" />


    </FrameLayout>
</android.support.constraint.ConstraintLayout>


